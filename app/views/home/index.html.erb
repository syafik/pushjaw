<div id="site">
  <div id="section-wrapper">
    <div id="services">
      <div class="page">
        <ul class="tabs">
          <% @services.each_with_index do |service, i|%>
            <li><a href="#tab<%=  i+1 %>"><%= service.try(:title) %></a></li>
          <% end %>
        </ul>
        <div class="tab-container">
          <% @services.each_with_index do |service, i|%>
            <div id="tab<%=  i+1 %>" class="tab-content">
              <div class="ct_services">
                <%= service.try(:content) %>
                <% service.images.each do |image| %>
                  <div class="service_img">
                    <div><%= image_tag image.image.url(:thumb), :width=>"120px", :height=>"80px" %></div>
                  </div>       
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="moon"></div>
        <div class="ufo"></div>
        <div class="rocket"></div>
        <div class="rocket2"></div>

        <!--<img src="images/rocket.png" width="216"/>-->
      </div>
    </div>
    <div id="portfolio" class="clearfix section">
      <div class="cloud"></div>
      <div class="page">
        <div class="shadow"><img src="../assets/shadow.png" width="100%" height=""/></div>
        <div class="balloon1"></div>
        <div class="balloon2"></div>
        <div class="balloon4"></div>
        <div id="sliderwraper">

          <div class="slides slider">
            <% @portfolios.each do |portfolio| %>
              <div>
                <%= image_tag portfolio.image.try(:image), :width=>"641", :height=>"399" %>
                <div class="Description">
                  <a href="<%= portfolio.try(:url) %>" target="_blank"><%= portfolio.try(:title) %></a>
                  <p><%= truncate(strip_tags(portfolio.try(:content)), length: 70 ) %></p>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      </div>

      <div class="cloud2"></div>

    </div>

    <div id="home" class="clearfix">
      <div class="cloudmoving"/></div>
    <div class="cloud3"></div>
    <div class="birds"></div>
    <div class="page">


      <div class="content">
        <%= image_tag "title.png", :width=>457, :height => 67 %>
        <p>
          <%= @home.try(:content) %>
        </p>
      </div>

      <div class="stork">
        <div class="blogwraper">
          <% @blog.each do |blog| %>
            <div class="blogspotlight">

              <h3><%= truncate blog.try(:title), length: 20 %></h3>
              <p><%= sanitize(truncate blog.try(:content), length: 60) %><a href="<%= blog_path(:id=>blog) %>" target="_blank">more</a></p>

            </div>
          <% end %>
        </div>
      </div>
      <div class="tree"></div>
    </div>
  </div>
  <div id="About" class="clearfix">

    <div class="water">
      <%= image_tag 'jawshadow.png', :class => 'pos' %>
      <%= image_tag 'jawshadow.png', :width=>"70", :class=>"pos2" %>
      <%= image_tag 'jawshadow.png', :width=>"", :class=>"pos3" %>
      <%= image_tag 'jawshadow.png', :width=>"50", :class=>"pos4" %>
    </div>

    <div class="aboutwraper content_6 content">
      <div class="images_container">

        <div class="abwrap">
          <h2>About Us</h2>
          <p><%= @about.try(:content) %></p>
          <h3>What people sayings about us ?</h3>
          <div class="testimonial">
            <%= @comment.try(:comment) %>
          </div>
          <p>- <%= @comment.try(:name) %>, <%= @comment.try(:title) %>, <%= @comment.try(:address) %></p>

        </div>

        <div class="teamwrap_nav">
          <ul class="nav-bootstrap nav-tabs">
            <li class="active"><a href="#our_team" data-toggle="tab"><h2>Our Team</h2></a></li>
            <li><a href="#our_video" data-toggle="tab"><h2>Our Video</h2></a></li>
          </ul>

          <div class="tab-content-bootstrap">
            <div class="tab-pane active" id="our_team">
              <div class="teamwrap">
                <div class="teamwrap_team">
                  <%= render 'index' %>
                </div>
                <div id="paginator">
                  <%= paginate @teams, :remote => true %>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="our_video">
              <div class="gall">
                <div class="gall_video">
                  <% @videos.each_with_index do |video,i| %>
                    <div class="gall_desc">
                      <a class="video" title=<%= video.title %> >
                        <a href="#myModal<%= i+1 %>" role="button" class="btn" data-toggle="modal">
                          <%= image_tag video.video.url(:thumb), :width => "100" , :height => "66" %>
                        </a>
                      </a>
                      <span>
                        <h1><%= video.try(:title) %></h1>
                        <p><%= video.try(:description) %></p>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

    </div>
    <%= image_tag 'reef.png', :class=>'reef',:width=>"100%" %>
  </div>
  <div id="Contact">
    <div class="border"></div>
    <div class="border3"></div>
    <div class="cyrcle"></div>
    <div class="cyrcle2"></div>
    <div class="cyrcle3"></div>
    <div class="cyrcle4"></div>
    <div class="contactwrap">

      <div class="contactform">
        <%= image_tag 'contacttext.png', :width=>"178" %>
        <%  @contact = Contact.new %>
        <%= form_for(@contact, :url => contacts_path) do |f| %>
          <div class="field">
            <%= f.text_field :name, :placeholder=>"Your name" %>
          </div>
          <div class="field">
            <%= f.text_field :email, :placeholder=>"Your Email" %>
          </div>
          <div class="field">
            <%= f.text_field :subject , :placeholder=>"Your Subject"%>
          </div>
          <div class="field">
            <%= f.text_area :request, rows: 3 %>
          </div>
          <div class="actions">
            <%= f.submit "send", :class=>"btnsend" %>
          </div>
        <% end %>
      </div>

      <div class="mapwraper">
        <div class="maptag" >
          <div id="map_canvas" style="width: 300px; height: 300px" ></div>
        </div>
        <div class="descmap">
          <h2>Here We Are !</h2>
          <%= @location.try(:address) %>  <br />
          <%= @location.try(:city) %>  <br />
          <%= @location.try(:mobile_phone) %> <br />
          <%= @location.try(:phone) %>  <br />
          <h3>Find Us :</h3>
          <ul class="socialtag">
            <li><a title="Follow us on Pushjaw" href="https://www.facebook.com/pushjaws" class="fb tooltips"></a></li>
            <li><a title="Follow us on @Pushjaw" href="" class="tw tooltips"></a></li>
          </ul>
        </div>
      </div>

    </div>
    <div class="worm"></div>
    <div class="border2"></div>
  </div>
</div>
</div>


<%= render 'video' %>

<%= content_for :javascript do %>
  <script type="text/javascript">
    function initialize() {
      var myLatlng = new google.maps.LatLng(<%= @res.try(:lat) %>,<%= @res.try(:lng) %>);
      var mapOptions = {
        zoom: 18,
        center: myLatlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      }
      var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

      var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title:"Hello World!"
      });
    }
    
    jQuery(document).ready(function() {
      initialize();
    });

  <% @videos.each_with_index do |video, i| %>
      $('#myModal<%= i+1 %> .btn, .modal-backdrop').live('click',function(){
        console.log("pause")
        _V_('#my_video_<%= i %>').pause();
        _V_('#my_video_<%= i %>').pause();
      });
  <% end %>

  </script>
<% end %>


