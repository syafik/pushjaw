<div id="page">
  <div id="content">
    <% @blog.each do |blog| %>
      <div class="post">
        <h2 class="title"><a href=<%= blog_path(blog) %> ><%= blog.try(:name) %></a></h2>
        <p class="meta"><span class="date"><%= blog.created_at.strftime('%d %B %Y') %></span></p>
        <div style="clear: both;">&nbsp;</div>
        <div class="entry">
          <p><%= blog.content.html_safe %></p>
          <p class="links"><a href=<%= blog_path(:id => blog) %> class="more">Read More</a>
  <%#*<a href="#" title="b0x" class="comments">Comments</a>%>
          </p>
        </div>
      </div>
    <% end %>
    <div style="clear: both;">&nbsp;</div>
  </div>
</div>